<% include ./partials/header %> 
    <h1>new blog post</h1>
    <form action="/blog" method="POST">
    <div>
        <div class="form-group">
            <label for="title">title</label>
            <input type="text" name="title" class="form-control" id="title" placeholder="heading name">
        </div>
        <div class="form-group">
            <label for="title">image</label>
            <input type="text" name="image" class="form-control" id="image" placeholder="image">
        </div>
        <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">blog content</span>
        </div>
        <textarea class="form-control" name="content"  id="content" aria-label="With textarea"></textarea>
        </div>
        <div class="form-group">
            <label for="heading">author</label>
            <input type="text" name="author" class="form-control" id="heading" placeholder="author">
        </div>
        <div class="form-group">
            <label for="tag">tags</label>
            <input type="text" name="tag" class="form-control" id="tag" placeholder="tag for categorizing"> 
        </div>
        <button class="btn btn-lg btn-submit" type="submit">submit</button>
    </div>
    </form>   
    </body>
</html>